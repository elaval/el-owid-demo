{
    "compilerOptions": {
      "target": "es2022",                          
      "module": "esnext",
      "noEmitOnError": true,
      "lib": ["es2022", "dom"],                     
      "strict": true,  
      "esModuleInterop": true, 
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "emitDeclarationOnly": false,
      "outDir": "out-tsc",
      "rootDir": "./",
    }
    ,
    "include": ["./src/**/*.ts"]
  }

